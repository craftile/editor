{
  "name": "@craftile/preview-client",
  "version": "0.1.0",
  "description": "Browser client for Craftile editor preview iframe functionality",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "rm -rf dist && tsc && vite build",
    "preview": "vite preview"
  },
  "keywords": [
    "craftile",
    "editor",
    "preview",
    "iframe",
    "blocks"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Eldo Magan",
      "email": "magan.eldo@gmail.com"
    }
  ],
  "dependencies": {
    "@craftile/event-bus": "workspace:*",
    "@craftile/messenger": "workspace:*",
    "@craftile/types": "workspace:*",
    "typescript": "^5.8.4",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.3.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
