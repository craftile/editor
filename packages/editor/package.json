{
  "name": "@craftile/editor",
  "version": "0.6.0",
  "description": "Vue.js-based editor UI components for craftile blocks engine",
  "keywords": [
    "craftile",
    "vue",
    "editor",
    "ui",
    "components"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Eldo Magan",
      "email": "magan.eldo@gmail.com"
    }
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "source": "./src/index.ts",
      "import": "./dist/index.js"
    },
    "./ui": {
      "types": "./dist/ui.d.ts",
      "source": "./src/ui.ts",
      "import": "./dist/ui.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsc && vite build --watch",
    "build": "tsc && vite build"
  },
  "dependencies": {
    "@craftile/core": "workspace:*",
    "@craftile/event-bus": "workspace:*",
    "@craftile/messenger": "workspace:*",
    "@craftile/types": "workspace:*",
    "vue": "^3.5.17",
    "vue-draggable-plus": "^0.6.0"
  },
  "devDependencies": {
    "@ark-ui/vue": "^5.24.1",
    "@iconify-json/heroicons": "^1.2.2",
    "@tailwindcss/vite": "^4.1.11",
    "@vitejs/plugin-vue": "^6.0.0",
    "postcss-prefixwrap": "^1.56.2",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.8.3",
    "unplugin-auto-import": "^19.3.0",
    "unplugin-icons": "^22.1.0",
    "unplugin-vue-components": "^28.8.0",
    "vite": "^7.0.0",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-dts": "^4.5.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/craftile/editor.git"
  },
  "publishConfig": {
    "access": "public"
  }
}
